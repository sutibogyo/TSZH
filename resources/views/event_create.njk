{% extends 'master' %}

{% block title %}Rendezvény beküldése{% endblock %}
{% block content %}
<h1>Rendezvény beküldése</h1>
{% if old('errors') %}
<div class="alert alert-danger" role="alert">Nem sikerült létrehozni a rendezvényt:
  <ul>
    {% for error in old('errors') %}
    <li>{{ error.message }}</li>
    {% endfor %}
  </ul>
</div>
{% endif %}
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <form class="form-horizontal" action="{{ 'do_event_create' | route }}" method="POST" enctype="multipart/form-data">
      {{ csrfField }}
      <div class="form-group">
        <label for="inputName" class="col-sm-4 control-label">Rendezvény neve</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" id="inputName" name="name" placeholder="Rendezvény neve" value="{{ old('name') }}">
        </div>
      </div>

      <div class="form-group">
        <label for="inputDescription" class="col-sm-4 control-label">Leírás</label>
        <div class="col-sm-8">
          <textarea id="inputDescription" class="form-control" name="description">{{ old('description') }}</textarea>
        </div>
      </div>
      <div class="form-group">
        <label for="inputDescription" class="col-sm-4 control-label">Date</label>
        <div class="col-sm-8">
          <input type="date" id="inputDate" class="form-control" name="date"/>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-8">
          <button type="submit" class="btn btn-success">Rendezvény beküldése</button>
        </div>
      </div>
    </form>
  </div>
</div>
{% endblock %}
